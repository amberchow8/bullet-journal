                     <Insets />
                  </opaqueInsets>
                  <VBox.margin>
                     <Insets bottom="20.0" left="170.0" top="10.0" />
                  </VBox.margin>
               </Button>
            </children>
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
         </VBox>
      </children></AnchorPane>
</Scene>
