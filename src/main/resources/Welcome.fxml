                     <Font size="9.0" />
                  </font>
                  <padding>
                     <Insets bottom="10.0" />
                  </padding>
               </Label>
               <HBox alignment="CENTER" prefHeight="42.0" prefWidth="400.0">
                  <children>
                     <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefHeight="17.0" prefWidth="130.0" text="Path:">
                        <padding>
                           <Insets right="20.0" />
                        </padding>
                     </Label>
                     <TextField fx:id="pathField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="27.0" prefWidth="230.0">
