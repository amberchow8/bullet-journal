    <AnchorPane prefHeight="300.0" prefWidth="400.0">
      <children>
         <VBox layoutY="1.0" prefHeight="299.0" prefWidth="400.0">
            <children>
               <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="40.0" prefWidth="401.0" text="Welcome!">
